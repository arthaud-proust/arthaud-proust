---
import portrait from "@/assets/images/arthaud-proust-portrait.jpg";
import Layout from "@/layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import { Content as ReadmeContent } from "~/README.md";
---

<Layout>
    <Image
        src={portrait}
        alt=""
        widths={[300]}
        quality={"max"}
        sizes={`300px`}
    />
    <ReadmeContent />
</Layout>

<style is:global lang="sass">
    img
        width: 40%
        height: auto
        margin-right: auto
        border-radius: .4rem

    ul
        list-style: none

    h1 + h2
        margin-top: 0.5rem
        font-weight: 400

    @media screen and (min-width: 840px)
        .list-with-dates > ul
            margin-left: 0

            > li
                $width: 6rem
                $gap: 2rem
                position: relative
                padding-left: $width + $gap

                &+ li
                    margin-top: 2rem

                span:first-of-type
                    position: absolute
                    left: 0
                    width: $width
                    white-space: nowrap

    @media screen and (max-width: 840px)
        .list-with-dates > ul
            > li
                &+ li
                    margin-top: 2rem

                span:first-of-type
                    display: block
                    font-weight: bold
</style>
