---
import portrait from '@/assets/images/arthaud-proust-portrait.jpg';
import Layout from '@/layouts/Layout.astro';
import Image from 'astro/components/Image.astro';
import { Content as ReadmeContent } from '~/README.md';
// const posts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
---

<Layout>
	<Image src={portrait} alt="" widths={[240, 540]} quality='mid' sizes={`(max-width: 360px) 240px, 540px`} />
	<ReadmeContent/>
</Layout>

<style>
	img {
		width: 40%;
		height: auto;
		margin-right: auto;
	}
</style>