---
import portrait from "@/assets/images/arthaud-proust-portrait.jpg";
import Layout from "@/layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import { Content as ReadmeContent } from "~/README.md";
---

<Layout>
    <Image
        src={portrait}
        alt=""
        widths={[300]}
        quality={"max"}
        sizes={`300px`}
    />
    <ReadmeContent />
</Layout>

<style is:global lang="sass">
    img
        width: 40%
        height: auto
        margin-right: auto

    h1 + h2
        margin-top: 0.5rem
        font-weight: 400

    .list-with-dates ul
        margin-left: 0

        li
            display: flex

            span:first-of-type
                width: 6rem
                flex-shrink: 0
                margin-right: 2rem
                white-space: nowrap
</style>
